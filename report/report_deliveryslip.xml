<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<template id="report_delivery_document_extend" inherit_id="stock.report_delivery_document">
			<xpath expr="//t[@t-call='web.external_layout']" position="replace">
				<t t-call="asiaglobal.external_layout_agt_delivery">
					<t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})" />
					<!-- <div class="page" t-attf-style="background-image:url('/asiaglobal/static/src/img/bill.PNG');  no-repeat; background-size: cover;"> -->
					<div class="page">
						<br/>
						<br/>
						<br/>
						<br/>
						<br/>

						<div class="row">
							<div class="col-xs-6 col-xs-offset-2">
								<span t-field="o.partner_id.name"/>
							</div>
							<div class="col-xs-4">
								<span t-field="o.scheduled_date"/>
							</div>
						</div>

						<div class="row">
							<div class="col-xs-6 col-xs-offset-2">
								<address t-field="o.partner_id" t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}' />
							</div>
							<div class="col-xs-4">
								<span t-field="o.sale_id.payment_term_id.name"/>
							</div>
						</div>

						<div class="row">
							<div class="col-xs-6 col-xs-offset-2">
								<span t-field="o.partner_id.vat"/>
							</div>
							<div class="col-xs-4">
								<!-- INVOICE NO -->
								<!-- <span t-field="o.payment_term_id.name"/> -->
							</div>
						</div>

						<div class="row">
							<div class="col-xs-6 col-xs-offset-2">
								<!-- ATTENTION -->
							</div>
							<div class="col-xs-4">
								<!-- P.O NO. -->
							</div>
						</div>			

						<br/>
						<br/>


						<table class="table table-condensed" name="delivery_receipt_table">
							<thead>
								<tr>
									<th></th>
									<th></th>
									<th></th>
									<th></th>
									<th></th>
								</tr>
							</thead>
							<tbody>
								<t t-set="line_count" t-value="0"/>
								<tr t-foreach="o.move_lines" t-as="move">
									<t t-set="line_count" t-value="line_count + 1"/>
									<td width="7%" style="border-top: 0px;"></td>
									<td width="15%" style="border-top: 0px;">
										<span t-field="move.product_id.default_code"/>
									</td>
									<td width="15%" style="border-top: 0px;">
										<span t-field="move.quantity_done" />
									</td>
									<td width="10%" style="border-top: 0px;">
										<span t-field="move.product_uom.name" />
									</td>
									<td width="53%" style="border-top: 0px;">
										<span t-field="move.name"/>
									</td>
								</tr>
								<t t-set="break_count" t-value="20 - line_count"/>
								<t t-if="break_count > 0">
									<t t-foreach="break_count" t-as="break">
										<tr>
											<td width="7%" style="border-top: 0px;">
												<br/>
											</td>
											<td width="15%" style="border-top: 0px;">
												<br/>
											</td>
											<td width="15%" style="border-top: 0px;">
												<br/>
											</td>
											<td width="10%" class="text-center" style="border-top: 0px;">
												<br/>
											</td>
											<td width="53%" class="text-center" style="border-top: 0px;">
												<br/>
											</td>
										</tr>
									</t>
								</t>
							</tbody>
						</table>

						<br/>

						<div class="row">
							<div class="col-xs-11 col-xs-offset-1">
								<span t-field="o.remarks"/>
							</div>
						</div>
					</div>
				</t>
			</xpath>
		</template>

	</data>
</odoo>
