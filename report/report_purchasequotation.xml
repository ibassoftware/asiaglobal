<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="asiaglobal_report_purchase_quotation_document" inherit_id="purchase.report_purchasequotation_document">
            <xpath expr="//t[@t-call='web.external_layout']" position="replace">
                <t t-call="asiaglobal.external_layout_purchase_quotation_asiaglobal">
                    <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})" />
                    <div class="page">
                        <br/>
                        <table class="list_table" style="border:none;font-size:14px" width="100%">
                            <tr>
                                <td class="noborder" valign="top" width="46%" style="border-style:solid;border-color:#808080;border-width:1px 1px 0px 1px;padding-left:0.5em;padding-top:0.5em;padding-right:0.5em;padding-bottom:0.5em;" >
                                    <b>Vendor</b>
                                </td>
                                <td class="noborder" width="8%"></td>
                                <td class="noborder" valign="top" width="46%" style="border-style:solid;border-color:#808080;border-width:1px 1px 0px 1px;padding-left:0.5em;padding-top:0.5em;padding-right:0.5em;padding-bottom:0.5em;" >
                                    <b>Ship To</b>
                                </td>
                            </tr>
                            <tr>
                                <td class="noborder" valign="top" width="46%" style="border-style:solid; border-color:#808080;border-width:0px 1px 1px 1px;padding-left:1.5em;padding-top:0.10em;">                 
                                    <span class="uppercase">
                                        <b>
                                            <span t-field="o.partner_id"/>
                                        </b><br />
                                    </span>
                                    <address t-field="o.partner_id"
                                    t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}' />
                                </td>
                                <td class="noborder"  width="8%"></td>
                                <td class="noborder" valign="top" width="46%" style="border-style:solid; border-color:#808080;border-width:0px 1px 1px 1px;padding-left:1.5em;padding-top:0.10em;"  >
                                    <span class="uppercase">
                                        <b>
                                            <span t-field="o.company_id"/>
                                        </b><br />
                                    </span>
                                    <address t-field="o.company_id.partner_id"
                                    t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}' />
                                </td>
                            </tr>
                            <tr>
                                <td class="noborder" valign="top" width="46%">
                                    <table class="table table-bordered">
                                        <tr>
                                            <td width="20%" style="border-style:solid;border-color:#808080;border-width:1px 1px 1px 1px;padding-left:0.5em;padding-top:0.5em;padding-right:0.5em;padding-bottom:0.5em;">
                                                <b>Terms</b>
                                            </td>
                                            <td width="30%" style="border-style:solid;border-color:#808080;border-width:1px 1px 1px 1px;padding-left:0.5em;padding-top:0.5em;padding-right:0.5em;padding-bottom:0.5em;">
                                                <span t-field="o.payment_term_id.name"/>
                                            </td>
                                            <td width="20%" style="border-style:solid;border-color:#808080;border-width:1px 1px 1px 1px;padding-left:0.5em;padding-top:0.5em;padding-right:0.5em;padding-bottom:0.5em;">
                                                <b>Dept.</b>
                                            </td>
                                            <td width="30%" style="border-style:solid;border-color:#808080;border-width:1px 1px 1px 1px;padding-left:0.5em;padding-top:0.5em;padding-right:0.5em;padding-bottom:0.5em;">
                                                <br/>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                                <td class="noborder"  width="8%"></td>
                                <td class="noborder" valign="top" width="46%">
                                    <table class="table table-bordered" width="100%">
                                        <tr>
                                            <td width="30%" style="border-style:solid;border-color:#808080;border-width:1px 1px 1px 1px;padding-left:0.5em;padding-top:0.5em;padding-right:0.5em;padding-bottom:0.5em;" >
                                                <b>Ship Via</b>
                                            </td>
                                            <td width="70%" style="border-style:solid;border-color:#808080;border-width:1px 1px 1px 1px;padding-left:0.5em;padding-top:0.5em;padding-right:0.5em;padding-bottom:0.5em;" >
                                                <br/>
                                            </td>
                                        </tr>
                                    </table>
                                </td>

                            </tr>
                        </table>

                        <table class="table table-condensed" style="font-size: 14px">
                            <thead>
                                <tr style="border-top:1px solid #000000;">
                                    <th style="border-style:solid;border-color:#808080;border-width:1px 1px 1px 1px;"><strong>Item Code</strong></th>
                                    <th style="border-style:solid;border-color:#808080;border-width:1px 1px 1px 1px;"><strong>Part Number</strong></th>
                                    <th style="border-style:solid;border-color:#808080;border-width:1px 1px 1px 1px;"><strong>Quantity</strong></th>
                                    <th style="border-style:solid;border-color:#808080;border-width:1px 1px 1px 1px;"><strong>Description</strong></th>
                                    <th style="border-style:solid;border-color:#808080;border-width:1px 1px 1px 1px;"><strong>Unit Price</strong></th>
                                    <th style="border-style:solid;border-color:#808080;border-width:1px 1px 1px 1px;"><strong>Total Price</strong></th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="line_count" t-value="0"/>
                                <tr style="font-size:14px;" t-foreach="o.order_line" t-as="line">
                                    <t t-set="line_count" t-value="line_count + 1"/>
                                    <td width="20%" style="border-style:solid;border-color:#808080;border-width:0px 1px 0px 1px;">
                                        <span t-field="line.product_id.default_code"/>
                                    </td>
                                    <td width="20%" style="border-style:solid;border-color:#808080;border-width:0px 1px 0px 1px;">
                                        <span t-field="line.product_id.name"/>
                                    </td>
                                    <td width="10%" style="border-style:solid;border-color:#808080;border-width:0px 1px 0px 1px;">
                                        <span t-esc="int(float(line.product_qty))"/>
                                    </td>
                                    <td width="30%" style="border-style:solid;border-color:#808080;border-width:0px 1px 0px 1px;">
                                        <span t-field="line.product_id.description_sale"/>
                                    </td>
                                    <td width="10%" style="border-style:solid;border-color:#808080;border-width:0px 1px 0px 1px;">
                                        <span t-field="line.price_unit" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                    </td>
                                    <td width="10%" style="border-style:solid;border-color:#808080;border-width:0px 1px 0px 1px;">
                                        <span t-field="line.price_subtotal" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                    </td>
                                </tr>
                                <t t-set="break_count" t-value="15 - line_count"/>
                                <t t-if="break_count > 0">
                                    <t t-foreach="break_count" t-as="break">
                                        <tr>
                                            <td width="20%" style="border-style:solid;border-color:#808080;border-width:0px 1px 0px 1px;">
                                                <br/>
                                            </td>
                                            <td width="20%" style="border-style:solid;border-color:#808080;border-width:0px 1px 0px 1px;">
                                                <br/>
                                            </td>
                                            <td width="10%" style="border-style:solid;border-color:#808080;border-width:0px 1px 0px 1px;">
                                                <br/>
                                            </td>
                                            <td width="30%" style="border-style:solid;border-color:#808080;border-width:0px 1px 0px 1px;">
                                                <br/>
                                            </td>
                                            <td width="10%" style="border-style:solid;border-color:#808080;border-width:0px 1px 0px 1px;">
                                                <br/>
                                            </td>
                                            <td width="10%" style="border-style:solid;border-color:#808080;border-width:0px 1px 0px 1px;">
                                                <br/>
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                                <tr>
                                    <td colspan="4" style="border-style:solid;border-color:#808080;border-width:1px 1px 0px 1px;font-size:14px;">
                                        <span t-field="o.notes"/>
                                    </td>
                                    <td width="10%" style="border-style:solid;border-color:#808080;border-width:1px 1px 0px 1px;font-size:14px;">
                                        <span><b><i>Total </i></b></span>
                                    </td>
                                    <td width="10%" style="border-style:solid;border-color:#808080;border-width:1px 1px 0px 1px;font-size:14px;">
                                        <b><i><span t-field="o.amount_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></i></b>
                                    </td>
                                </tr>
                                <tr style="font-size:14px;">
                                    <td colspan="6" style="border-style:solid;border-color:#808080;border-width:1px 1px 1px 1px;">
                                        <table class="list_table" style="border:none;font-size:14px" width="100%">
                                            <tr>
                                                <td width="25%" class="noborder" style="padding-left:0.5em;padding-top:0.5em;padding-right:0.5em;padding-bottom:0.5em;">
                                                    <center>
                                                        <b>Prepared By:</b><br/>
                                                        _________________________
                                                        <span t-field="o.create_uid.name"/><br/>
                                                        Name &amp; Signature
                                                    </center>
                                                </td>
                                                <td width="25%" class="noborder" style="padding-left:0.5em;padding-top:0.5em;padding-right:0.5em;padding-bottom:0.5em;">
                                                    <center>
                                                        <b>Approver 1:</b><br/>
                                                        _________________________<br/><br/>
                                                        Dept. Manager
                                                    </center>
                                                </td>
                                                <td width="25%" class="noborder" style="padding-left:0.5em;padding-top:0.5em;padding-right:0.5em;padding-bottom:0.5em;">
                                                    <center>
                                                        <b>Approver 2:</b><br/>
                                                        _________________________<br/>
                                                        J. Malijan <br/>
                                                        AVP - Finance &amp; Admin
                                                    </center>
                                                </td>
                                                <td width="25%" class="noborder" style="padding-left:0.5em;padding-top:0.5em;padding-right:0.5em;padding-bottom:0.5em;">
                                                    <center>
                                                        <b>Noted By:</b><br/>
                                                        _________________________<br/>
                                                        A. RAMOS <br/>
                                                        President
                                                    </center>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

