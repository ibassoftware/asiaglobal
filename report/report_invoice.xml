                                <td width="60%" style="border-top: 0px;">
                                    <br/>
                                </td>
                                <td width="28%" style="border-top: 0px;">
                                    <br/>
                                </td>
                                <td width="2%" class="text-center" style="border-top: 0px;">
                                    <br/>
                                </td>
                            </tr>
