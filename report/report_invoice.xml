                                <td width="20%" style="border-top: 0px;">
                                    <br/>
                                </td>
                                <td width="15%" class="text-center" style="border-top: 0px;">
                                    <br/>
                                </td>
                            </tr>
                            <tr>
                                <td width="10%" style="border-top: 0px;"></td>
                                <td width="55%" style="border-top: 0px;">
                                    <br/>
                                </td>
                                <td width="30%" class="text-right" style="border-top: 0px;">
                                    <span t-field="o.amount_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                                <td width="5%" style="border-top: 0px;">
                                    <br/>
                                </td>
                            </tr>
                            <tr>
                                <td width="10%" style="border-top: 0px;"></td>
                                <td width="55%" style="border-top: 0px;">
                                    <br/>
                                </td>
                                <td width="30%" style="border-top: 0px;">
                                     <br/>
                                    <span t-field="o.comment"/>
                                </td>
                                <td width="5%" style="border-top: 0px;">
                                   <br/>
                                </td>
                            </tr>
                        </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </template>

        <template id="agt_report_account_invoice">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="asiaglobal.agt_report_account_invoice_document" t-lang="o.partner_id.lang"/>
                </t>
            </t>
        </template>
