        <!-- START BILLING INVOICE -->
        <template id="agt_report_account_invoice_document">
            <t t-call="asiaglobal.external_layout_agt_account_invoice">
                <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})" />
                <!-- <div class="page" t-attf-style="background-image:url('/asiaglobal/static/src/img/bill.PNG');  no-repeat; background-size: cover;"> -->
                <div class="page">
                	<br/>
                    <br/>
                    <br/>
                    <br/>
                    <br/>

                    <div class="row" t-if="o.type == 'in_refund' or o.type == 'in_invoice'">
                        <!-- SOLD TO -->
                        <div class="col-xs-5">
                        </div>
                        <!-- SHIP TO -->
                        <div class="col-xs-5">
                        </div>
                        <!-- BILL TO -->
                        <div class="col-xs-2">
                            <span t-field="o.date_invoice"/>
                            <br/>
                            <br/>
                        </div>
                    </div>

                   <br/>
                   <br/>

                   <div class="row">
                        <!-- SOLD TO -->
                        <div class="col-xs-2 col-xs-offset-2">
                            <p t-field="o.partner_id.name"/>
                            <address t-field="o.partner_id"
                                t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}' />
                        </div>
                        <!-- SHIP TO -->
                        <div class="col-xs-3 col-xs-offset-1">
                            <p t-field="o.partner_id.name"/>
                            <address t-field="o.partner_id"
                                t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}' />
                        </div>
                        <!-- BILL TO -->
                        <div class="col-xs-4">
                            <br/>
                            <p t-field="o.partner_id.name"/>
                            <address t-field="o.partner_id"
                                t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}' />
                        </div>
                    </div>
                
                    <div class="row">
                        <!-- SOLD TO -->
                        <!-- ADDRESS -->
                        <div class="col-xs-2 col-xs-offset-2">
                            <p/>
                        </div>
                        <!-- SHIP TO -->
                        <div class="col-xs-4">
                            
                        </div>
                        <!-- BILL TO -->
                        <div class="col-xs-4">
                            <p/>
                        </div>
                    </div>

                    <div class="row">
                        <!-- TIN -->
                        <div class="col-xs-3 col-xs-offset-1">
                            <span t-field="o.partner_id.vat"/>
                        </div>
                        <!-- OSCA/PWD ID NO -->
                        <div class="col-xs-3 col-xs-offset-1">
                            <p/>
                        </div>
                        <div class="col-xs-4">
                            <p/>
                        </div>
                    </div>

                    <div class="row">
                        <!-- BUS STYLE -->
                        <div class="col-xs-3 col-xs-offset-1">
                            <p/>
                        </div>
                        <!-- CARDHOLDER SIGNATURE-->
                        <div class="col-xs-3 col-xs-offset-1">
                            <p/>
                        </div>
                        <div class="col-xs-4">
                            <p/>
                        </div>
                    </div>

                    <br/>
                    <br/>

                    <div class="row">
                        <!-- SALESMAN -->
                        <div class="col-xs-3 col-xs-offset-1">
                            <p t-field="o.user_id.name"/>
                        </div>
                        <!-- REFERENCE -->
                        <div class="col-xs-3 col-xs-offset-1">
                            <p t-field="o.name"/>
                        </div>
                        <!-- PAYMENT TERMS -->
                        <div class="col-xs-2">
                            <p t-field="o.payment_term_id.name"/>
                        </div>
                        <!-- DELIVERY RECEIPT NO -->
                        <div class="col-xs-2">
                            <p/>
                        </div>
                    </div>

                    <br/>
                    <br/>

                    <!-- Is there a discount on at least one line? -->
                    <t t-set="display_discount" t-value="any([l.discount for l in o.invoice_line_ids])"/>

                    <table class="table table-condensed" name="invoice_line_table">
                        <thead>
                            <tr>
                                <th></th>
                            	<th></th>
                            	<th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody class="invoice_tbody">
                            <t t-set="line_count" t-value="0"/>
                            <tr t-foreach="o.invoice_line_ids" t-as="l">
                                <t t-set="line_count" t-value="line_count + 1"/>
                                <td width="7%" style="border-top: 0px;"></td>
                            	<td width="10%" style="border-top: 0px;">
                                    <span t-field="l.quantity"/>
                                </td>
                                <td width="10%" style="border-top: 0px;">
                                	<span t-field="l.uom_id" />
                                </td>
                                <td width="33%" class="text-center" style="border-top: 0px;"><span t-field="l.name"/></td>
                                <td width="10%" class="text-center" style="border-top: 0px;"><span t-field="l.product_id.default_code"/></td>
                                <td width="15%" class="text-center" style="border-top: 0px;">
                                    <span t-field="l.price_unit"/>
                                </td>
                                <td width="15%" class="text-center" style="border-top: 0px;">
                                    <span t-field="l.price_subtotal" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                            <t t-set="break_count" t-value="20 - line_count"/>
                            <t t-if="break_count > 0">
                                <t t-foreach="break_count" t-as="break">
                                    <tr>
                                        <td width="7%" style="border-top: 0px;">
                                            <br/>
                                        </td>
                                        <td width="10%" style="border-top: 0px;">
                                            <br/>
                                        </td>
                                        <td width="10%" style="border-top: 0px;">
                                            <br/>
                                        </td>
                                        <td width="33%" class="text-center" style="border-top: 0px;">
                                            <br/>
                                        </td>
                                        <td width="10%" class="text-center" style="border-top: 0px;">
                                            <br/>
                                        </td>
                                        <td width="15%" class="text-center" style="border-top: 0px;">
                                            <br/>
                                        </td>
                                        <td width="15%" class="text-center" style="border-top: 0px;">
                                            <br/>
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                    </table>

                    <table class="table table-condensed">
                        <thead>
                        </thead>
                        <tbody class="invoice_tbody">
                            <t t-if="o.type == 'out_refund' or o.type == 'out_invoice'">
                            <tr>
                                <td width="10%" style="border-top: 0px;"></td>
                                <td width="40%" style="border-top: 0px;">
                                    <br/>
                                    <span t-field="o.comment"/>
                                </td>
                                <td width="10%" class="text-center" style="border-top: 0px;">
                                    <br/>
                                </td>
                                <td width="10%" class="text-center" style="border-top: 0px;">
                                    <br/>
                                </td>
                                <td width="15%" class="text-center" style="border-top: 0px;">
                                    <br/>
                                </td>
                                <td width="15%" style="border-top: 0px;">
                                    <span t-field="o.amount_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/><br/><br/>
                                    <span t-field="o.amount_tax" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/><br/>
                                    <span t-field="o.amount_untaxed" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/><br/>
                                    <br/>
                                    <span t-field="o.amount_untaxed" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/><br/>
                                    <span t-field="o.amount_tax" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/><br/>
                                    <span t-field="o.amount_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/><br/><br/>
                                </td>
                            </tr>
                        </t>
                        <t t-if="o.type == 'in_refund' or o.type == 'in_invoice'">
