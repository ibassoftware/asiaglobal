<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- START SERVICE QUOTE -->
        <template id="external_layout_service_quotation">
            <t t-if="not o and doc">
                <t t-set="o" t-value="doc"/>
            </t>

            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>

            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"/>
            </t>

            <t t-call="asiaglobal.external_layout_service_quotation_custom"><t t-raw="0"/></t>
        </template>

        <template id="external_layout_service_quotation_custom">
            <div class="header">
               <img t-if="company.logo" t-att-src="b'data:image/png;base64,%s' % company.logo" class="pull-left"/>
                <!-- <img src='/asiaglobal/static/src/img/agtprimary' style="height:100%;"/> -->
            </div>

            <div class="article o_report_layout_standard">
                <t t-raw="0" />
            </div>

            <div class="footer">
                <p style="font-size:12px">
                    Building B2A Granville Industrial ComplexBrgy. Bancal Carmona, Cavite 4116 Telephone: 63 (046) 413 1408eFax: 63 (02) 857 2169 corporate@asiaglobaltec.com
                </p>
                <div class="row" style="font-size: 14px;color: red;">
                    <div class="col-xs-12">
                        <p> <b>Solutions. Satisfaction.</b></p>
                    </div>
                    <!-- <div class="col-xs-4 text-muted text-right">
                        Page <span class="page"/> of <span class="topage"/>
                    </div> -->
                </div>
            </div>
        </template>
        <!-- END SERVICE QUOTE -->

